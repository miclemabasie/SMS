# .gitattributes

static/* linguist-vendored
staticfiles/* linguist-vendored
templates/* linguist-vendored

# Set the default programming language for unknown files
* linguist-language=Python



# Python files
*.py linguist-language=Python
*.pyw linguist-language=Python

# Django files
*.html linguist-language=HTML
*.css linguist-language=CSS
*.js linguist-language=JavaScript

# Other common web development files
*.json linguist-language=JSON
*.xml linguist-language=XML
*.html linguist-language=HTML

# Ignore generated files
__pycache__/* linguist-generated=true
*.pyc linguist-generated=true
*.pyo linguist-generated=true
*.pyd linguist-generated=true
*.db linguist-generated=true
*.sqlite linguist-generated=true